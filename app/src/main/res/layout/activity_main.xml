<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#232223"
    android:weightSum="6"
    tools:context=".MainActivity">

    <TextView
        android:padding="5dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="30sp"
        android:layout_marginTop="10dp"
        android:background="#97E2E4"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#0000ff"
        android:gravity="center|right"
        android:id="@+id/ScreenID"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <LinearLayout
        android:weightSum="4"
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="0dp">

        <Button
            android:onClick="ButtonClick"
            android:id="@+id/ac_ID"
            android:background="@drawable/keyboard_btn"
            android:text="AC"
            android:textColor="#ff22"
            android:textSize="30sp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"/>

        <Button
            android:onClick="ButtonClick"
            android:id="@+id/power_ID"
            android:background="@drawable/keyboard_btn"
            android:text="Â²"
            android:textColor="#ff22"
            android:textSize="30sp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"/>

        <Button
            android:onClick="ButtonClick"
            android:id="@+id/back_ID"
            android:background="@drawable/keyboard_btn"
            android:text="C"
            android:textColor="#ff22"
            android:textSize="30sp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"/>

        <Button
            android:onClick="ButtonClick"
            android:id="@+id/div_ID"
            android:background="@drawable/keyboard_btn"
            android:text="/"
            android:textColor="#ff22"
            android:textSize="30sp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"/>
    </LinearLayout>


    <LinearLayout
        android:weightSum="4"
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="0dp">

        <Button
            android:onClick="ButtonClick"
            android:id="@+id/seven_ID"
            android:background="@drawable/keyboard_btn"
            android:text="7"
            android:textColor="#ff22"
            android:textSize="30sp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"/>

        <Button
            android:onClick="ButtonClick"
            android:id="@+id/eight_ID"
            android:background="@drawable/keyboard_btn"
            android:text="8"
            android:textColor="#ff22"
            android:textSize="30sp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"/>

        <Button
            android:onClick="ButtonClick"
            android:id="@+id/nine_ID"
            android:background="@drawable/keyboard_btn"
            android:text="9"
            android:textColor="#ff22"
            android:textSize="30sp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"/>

        <Button
            android:onClick="ButtonClick"
            android:id="@+id/mul_ID"
            android:background="@drawable/keyboard_btn"
            android:text="*"
            android:textColor="#ff22"
            android:textSize="30sp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"/>
    </LinearLayout>

    <LinearLayout
        android:onClick="ButtonClick"
        android:weightSum="4"
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="0dp">

        <Button
            android:onClick="ButtonClick"
            android:id="@+id/six_ID"
            android:background="@drawable/keyboard_btn"
            android:text="6"
            android:textColor="#ff22"
            android:textSize="30sp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"/>

        <Button
            android:onClick="ButtonClick"
            android:id="@+id/five_ID"
            android:background="@drawable/keyboard_btn"
            android:text="5"
            android:textColor="#ff22"
            android:textSize="30sp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"/>

        <Button
            android:onClick="ButtonClick"
            android:id="@+id/four_ID"
            android:background="@drawable/keyboard_btn"
            android:text="4"
            android:textColor="#ff22"
            android:textSize="30sp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"/>

        <Button
            android:onClick="ButtonClick"
            android:id="@+id/sub_ID"
            android:background="@drawable/keyboard_btn"
            android:text="-"
            android:textColor="#ff22"
            android:textSize="30sp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"/>
    </LinearLayout>

    <LinearLayout
        android:weightSum="4"
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="0dp">

        <Button
            android:onClick="ButtonClick"
            android:id="@+id/three_ID"
            android:background="@drawable/keyboard_btn"
            android:text="3"
            android:textColor="#ff22"
            android:textSize="30sp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"/>

        <Button
            android:onClick="ButtonClick"
            android:id="@+id/two_ID"
            android:background="@drawable/keyboard_btn"
            android:text="2"
            android:textColor="#ff22"
            android:textSize="30sp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"/>

        <Button
            android:onClick="ButtonClick"
            android:id="@+id/one_ID"
            android:background="@drawable/keyboard_btn"
            android:text="1"
            android:textColor="#ff22"
            android:textSize="30sp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"/>

        <Button
            android:onClick="ButtonClick"
            android:id="@+id/add_ID"
            android:background="@drawable/keyboard_btn"
            android:text="+"
            android:textColor="#ff22"
            android:textSize="30sp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"/>
    </LinearLayout>

    <LinearLayout
        android:weightSum="4"
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="0dp">

        <Button
            android:onClick="ButtonClick"
            android:id="@+id/zero_ID"
            android:background="@drawable/keyboard_btn"
            android:text="0"
            android:textColor="#ff22"
            android:textSize="30sp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"/>

        <Button
            android:onClick="ButtonClick"
            android:id="@+id/point_ID"
            android:background="@drawable/keyboard_btn"
            android:text="."
            android:textColor="#ff22"
            android:textSize="30sp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"/>

        <Button
            android:onClick="ButtonClick"
            android:id="@+id/ans_ID"
            android:background="@drawable/keyboard_btn"
            android:text="Ans"
            android:textColor="#ff22"
            android:textSize="30sp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"/>

        <Button
            android:onClick="ButtonClick"
            android:id="@+id/equal_ID"
            android:background="@drawable/keyboard_btn"
            android:text="="
            android:textColor="#ff22"
            android:textSize="30sp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"/>
    </LinearLayout>




</LinearLayout>